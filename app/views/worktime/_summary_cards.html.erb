<div id="worktime_summary">

<% total_hours = stats.sum { _1[:hours].to_f } %>
<% employees   = stats.size %>
<div class="row g-2 mb-3">
  <div class="col-sm-4">
    <div class="card border-1 shadow-sm">
      <div class="card-body py-2">
        <div class="small text-muted">Сотрудников</div>
        <div class="h5 mb-0"><%= employees %></div>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="card border-1 shadow-sm">
      <div class="card-body py-2">
        <div class="small text-muted">Сумма часов</div>
        <div class="h5 mb-0"><%= number_with_precision(total_hours, precision: 2) %> ч</div>
      </div>
    </div>
  </div>
</div>
</div>