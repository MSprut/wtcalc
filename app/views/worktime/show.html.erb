<div class="container-fluid py-3">
  <h1 class="h5 mb-3">Расчёт рабочего времени</h1>

  <div class="row g-3" data-controller="worktime-busy">
    <%= render "worktime/filter" %>
    <section class="col-lg-9 position-relative">
      <div class="position-absolute top-0 start-0 end-0 bottom-0 d-none
                  bg-white bg-opacity-50 d-flex align-items-center justify-content-center"
           data-worktime-busy-target="overlay">
        <div class="spinner-border text-secondary" role="status" aria-hidden="true"></div>
      </div>
      <%# <turbo-frame id="worktime_frame"> %>
        <%= render "worktime/frame",
          pagy: @pagy, stats: @stats_page, series: @series,
          date_from: @date_from, date_to: @date_to, user_id: @user_id %>
      <%# </turbo-frame> %>
    </section>
  </div>
</div>