<div class="container py-3">
  <h1 class="h5 mb-3">CSV viewer</h1>

  <!-- место для флеша -->
  <div id="csv_flash"></div>

  <!-- форма загрузки; Turbo по умолчанию включён -->
  <%= form_with url: csv_index_path, method: :post, multipart: true,
                class: "d-flex gap-2 align-items-end flex-wrap" do |f| %>
    <div>
      <label class="form-label mb-1">CSV-файл</label>
      <%= f.file_field :file, accept: ".csv", class: "form-control form-control-sm" %>
    </div>
    <%= f.submit "Загрузить", class: "btn btn-primary btn-sm" %>
  <% end %>

  <!-- место для таблицы -->
  <div id="csv_table" class="mt-3"></div>
</div>